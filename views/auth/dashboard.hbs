<div class="container-dashboard">

  <div class="row justify-content-center text-center">
    <h2 style="padding:10px 0px 10px 0;">Welcome to {{ loggedUser }} Dashboard</h2>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3" style="padding:0px 20px 0px 20px; color:brown;">
      <h4>My Daily Statistics</h4><br />
      <div class="row" style="overflow-y: auto; height:260px;">
        <input type="hidden" name="storeLocs" id="storeLocs" value="{{ storeStats }}" />
        <input type="hidden" name="loggedInState" id="loggedInState" value="true" />
        {{#each itemstats}}
        <div class="col-12">
          <div class="bg-warning" name="buying_date">{{formatDate _id day="numeric" month="long" year="numeric"}}</div>
          <div>Price: <span name="item_price">{{price}}</span></div>
          <div>Calories: <span name="item_calorie">{{calories}}</span></div>
        </div>
        {{/each}}
      </div>
      <br>
      <div class="row">
        <div class="col-12" id="mymap">my map here</div>
      </div>
    </div>
    <div class="col-8">
      <h4><br><br></h4>
      
      <div class="row justify-content-around">
        <div class="col-1"></div>
        <div class="col-3 dashbox"><a href="/auth/today"><img src="..\images\bag.png" width="50%"
              style="padding-top:15px;"> </br></br>Add Expenditure</a></div>

        <div class="col-3 dashbox"><a href="/auth/archive"> <img src="..\images\box.png" width="50%"
              style="padding-top:25px;"> </br></br>Archive</a></div>


        <div class="col-1"></div>
      </div>
      <br><br>
      <div class="row justify-content-around">
        <div class="col-8">
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
</div>