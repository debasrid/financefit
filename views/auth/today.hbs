{{!-- //---table for add items and total price------// --}}

<div class="container-dashboard">
<input type="hidden" name="loggedInState" id="loggedInState" value="true"/>
<form action="/data/today" method="post" >
    <table id="myTable" class="table order-list container text-center">
        <thead>
            <tr class="row ">
                <td class="col justify-content-center text-center">
                    <h4 style="color:darkblue;">Add Items</h4>
                </td>
            </tr>
            <tr class="row ">
                <td class="col justify-content-center text-center">
                    <h4>{{message}}</h4>
                </td>
            </tr>
            <tr class="row justify-content-center text-center" style="font-size:18px; font-weight:bold;color:brown;">
                <td class="col">Date</td>
                <td class="col">Store Name</td>
                <td class="col">Food Items Bought</td>
                <td class="col">Calories</td>
                <td class="col">Price</td>
                <td class="col"></td>
            </tr>
        </thead>
        <tbody>
            <tr class="row justify-content-center text-center">

                <td class="col">
                    <input type="date" name="buying_date" class="form-control" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"/>
                </td>
                <td class="col">
                    <input type="text" name="store_name" class="form-control" />
                </td>
                <td class="col">
                    <input type="text" name="product_name" class="form-control" />
                </td>
                <td class="col">
                    <input type="number" name="calorie" class="form-control" required/>
                </td>
                <td class="col">
                    <input type="number" name="price" min="0" class="form-control" required />
                </td>
                <td class="col"></td>
            </tr>
        </tbody>
        <tfoot>

            <tr>
                <td class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" id="addrow" class="btn btn-secondary">Add More</button>
                    <button type="submit" onclick="/views/success.hbs" class="btn btn-secondary">Save Items</button>

                </td>

            </tr>
            </form>
          
            <tr>
                <td>
                    </br>
                    <form action="/data/uploadreceiptphoto" method="post" enctype="multipart/form-data">
                        <h4> <label for="receipt_upload">Upload Receipt Photo</label></h4>
                        <input type="file" name="receipt" accept="image/*">

                        <input type="submit" value="Upload Image">

                    </form>
                </td>
            </tr>

        </tfoot>
    </table>
</div>