<div class="container-dashboard">
<input type="hidden" name="loggedInState" id="loggedInState" value="true"/>
    <table id="myTable" class="table order-list container text-center">
        <thead>
            <tr class="row ">
                <td class="col justify-content-center text-center">
                    <h2 style="color:rgb(80, 36, 121);padding-top:10px;">Edit Item</h2>
                </td>
            </tr>
            <tr class="row justify-content-center text-center" style="color:brown; font-size:18px;font-weight:bold;">
                <td class="col">Date</td>
                <td class="col">Store Name</td>
                <td class="col">Food Items Bought</td>
                <td class="col">Calories</td>
                <td class="col">Price</td>
                
            </tr>
        </thead>

        {{#each allitems}}
        <form action="/data/itemedit?id={{_id}}" method="post">
        <input type="hidden" name="buyer_name" value="{{buyer_name}}"/>
        <tbody>
            <tr class="row justify-content-center text-center">

                <td class="col">
                    <input type="date" name="buying_date" class="form-control" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="{{buying_date}}"/>
                </td>
                <td class="col">
                    <input type="text" name="store_name" class="form-control" value="{{store_name}}" />
                </td>
                <td class="col">
                    <input type="text" name="product_name" class="form-control" value="{{product_name}}" />
                </td>
                <td class="col">
                    <input type="number" name="calorie" class="form-control" required value="{{calorie}}"/>
                </td>
                <td class="col">
                    <input type="number" name="price" min="0" class="form-control" required value="{{price}}" />
                </td>
            </tr>
        </tbody>
        {{/each}}
        <tfoot>

            <tr>
                <td class="btn-group" role="group" aria-label="Basic example">
                    <button type="submit" onclick="/views/success.hbs" class="btn btn-secondary">Save Item</button>

                </td>

            </tr>     
        </tfoot>
        </form>
    </table>
</div>